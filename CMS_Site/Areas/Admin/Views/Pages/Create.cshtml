@model DAL.Page

@{
    ViewBag.Title = "Create";
}

<h2>Create Page</h2>

@using (Html.BeginForm("Create","Pages",FormMethod.Post,new {enctype="multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-light">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            @Html.LabelFor(model => model.GroupID, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
            <div class="col-md-9">
                @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
            <div class="col-md-9">
                <input class="form-control"  type="file" name="photoUp"/>
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            @Html.LabelFor(model => model.ShowSlider, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
            <div class="col-md-9">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ShowSlider)
                    @Html.ValidationMessageFor(model => model.ShowSlider, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-success w-50 mt-3" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index","",new { @class="btn btn-dark mt-3"})
</div>
