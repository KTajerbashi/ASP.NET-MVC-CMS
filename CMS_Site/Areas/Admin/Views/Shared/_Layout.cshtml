<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Script/modernizr")
</head>
<body class="text-center">
    <header class="bg-dark text-light m-3 p-5 rounded">
        <h1>Header</h1>
    </header>

    <section class="bg-warning text-danger m-3 p-5 rounded d-flex flex-column justify-content-center align-items-center">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        @RenderBody()
    </section>


    <footer class="bg-dark text-light m-3 p-5 rounded">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/Script/jquery")
    @Scripts.Render("~/Script/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>