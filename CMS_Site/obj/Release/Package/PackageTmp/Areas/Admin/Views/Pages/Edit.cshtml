@model DAL.Page

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Page</h2>

@using (Html.BeginForm("Edit", "Pages", FormMethod.Post, new { enctype = "multipart/form-data", @class="text-light" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PageId)
    @Html.HiddenFor(model => model.Visit)
    @Html.HiddenFor(model => model.CreateTime)
    @Html.HiddenFor(model => model.Photo)

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.GroupID, "GroupID", htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-9">
            @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.Tags, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-10">
            <input class="form-control" type="file" name="photoUp" />
            @if (Model.Photo != null)
            {
                <img src="~/Image/@Model.Photo" class="img-thumbnail mt-2 " style="max-width: 150px;" />
            }
            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        @Html.LabelFor(model => model.ShowSlider, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.ShowSlider)
                @Html.ValidationMessageFor(model => model.ShowSlider, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group d-flex flex-sm-column flex-md-row mt-1">
        <div class="col-12">
            <input type="submit" value="Save" class="btn btn-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index","",new {@class="btn btn-dark mt-2"})
</div>
