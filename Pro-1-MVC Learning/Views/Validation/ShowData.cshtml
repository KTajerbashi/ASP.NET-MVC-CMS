@model List<Pro_1_MVC_Learning.Models.Person>

@{
    ViewBag.Title = "ShowData";
    Layout = "~/Views/Validation/Index.cshtml";
}

<div id="validation-container-showdata">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="item-collection-validation-data">
                <p>ID : @item.Id</p>
                <p>Name : @item.Name</p>
                <p>Family : @item.Family</p>
                <p>Age : @item.Age</p>
                <div class="UD-control">
                    <a href="@Url.RouteUrl("ValidatonDelete",new {id=item.Id})">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <h2>ShowData</h2>
    }
</div>

