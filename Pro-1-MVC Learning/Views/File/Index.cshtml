@model String
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/CSS/File.css" rel="stylesheet" />
    <title>File</title>
</head>
<body>
    <h1>File Management</h1>

    <div id="div1">
        <a href="@Url.RouteUrl("FileRead")">Read File</a>
        <a href="@Url.RouteUrl("FileDownload")">Download File</a>
    </div>

    <div id="div2">
        @using (Html.BeginForm("Upload", "File", FormMethod.Post, new { enctype="multipart/form-data" }))
        {
            <input type="file" name="file" />
            <input type="submit" value="Upload File" />
        }
    </div>

    <div id="div3">
       <p>@Model</p>
       <p>@if (ViewBag.Message != null) { @ViewBag.Message } else { @("File Not Uploaded") }</p>
    </div>

</body>
</html>
